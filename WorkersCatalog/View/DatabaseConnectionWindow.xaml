<Window x:Class="WorkersCatalog.View.DatabaseConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConnectionSettings" Height="200" Width="210" ResizeMode="NoResize" >
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10 10 10 0">
            <Label Content="Login" />
            <TextBox Name="txtLogin" Width="110" Margin="25 0 0 0" Text="IVAN\\SQLEXPRESS"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10 10 10 0">
            <Label Content="Password" />
            <PasswordBox Name="txtPassword" Width="110"  Margin="4 0 0 0" Password="NoPassword"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10 10 10 0">
            <Label Content="Database" />
            <TextBox Name="txtDatabase" Width="110" Margin="5 0 0 0" Text="WorkerCatalog" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10 10 10 0">
            <Button Content="Ok" Width="50" Margin="30 10 10 0" Click="OnOkClick" />
            <Button Content="Cancel" Width="50" Margin="10 10 10 0" Click="OnCancelClick"/>
        </StackPanel>
    </StackPanel>
</Window>
